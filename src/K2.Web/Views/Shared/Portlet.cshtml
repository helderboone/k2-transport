<div class="m-portlet m-portlet--primary m-portlet-md" style="border: 1px solid #ccc; margin:10px;">
    <div class="m-portlet__head" style="border-bottom: 1px solid #8DD2F1;">
        <div class="m-portlet__head-caption">
            <div class="m-portlet__head-title">
                @RenderSection("Cabecalho", true)
            </div>
        </div>
    </div>
    <div class="m-portlet__body">
        @RenderSection("Conteudo", true)
    </div>
    <div class="m-portlet__foot">
        <div class="row align-items-center">
            <div class="col-lg-12 m--align-right">
                @RenderSection("Botoes", false)
            </div>
        </div>
    </div>
</div>
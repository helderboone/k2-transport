@using K2.Web.Helpers

@model K2.Web.Models.LocalidadeRegistro

<div class="m-portlet m-portlet--brand m-portlet--head-solid-bg m-portlet-md" style="margin:0 auto;">
    <div class="m-portlet__head">
        <div class="m-portlet__head-caption">
            <div class="m-portlet__head-title">
                <h3 class="m-portlet__head-text">
                    @(Model == null ? "Cadastrar" : "Alterar") localidade
                </h3>
            </div>
        </div>
    </div>
    <form id="frmManterLocalidade" class="m-form m-form--fit m-form--state" novalidate="novalidate">
        <input type="hidden" id="iIdLocalidade" name="iIdLocalidade" value="@(Model != null ? Model.Id.ToString() : string.Empty)">
        <div class="m-portlet__body">
            <div class="form-group m-form__group m-form__group--md row">
                <div class="col-lg-8 m-form__group-sub">
                    <label>Nome <span class="m-badge m-badge--danger m-badge--dot"></span></label>
                    <input type="text" class="form-control m-input m-input--square m-input--air" id="iNome" name="iNome" maxlength="100" style="text-transform:uppercase;" value="@Model?.Nome">
                    <span class="m-form__help">Nome da localidade (por exemplo, <i>"São Mateus"</i>)</span>
                </div>
                <div class="col-lg-4 m-form__group-sub">
                    <label>Sigla <span class="m-badge m-badge--danger m-badge--dot"></span></label>
                    <input type="text" class="form-control m-input m-input--square m-input--air" id="iSigla" name="iSigla" maxlength="10" style="text-transform:uppercase;" value="@Model?.Sigla">
                    <span class="m-form__help">Sigla da localidade (por exemplo, <i>"SAMA"</i>)</span>
                </div>
            </div>
            <div class="form-group m-form__group m-form__group--md row">
                <div class="col-lg-12 m-form__group-sub">
                    <label>Estado <span class="m-badge m-badge--danger m-badge--dot"></span></label>
                    <div class="m-select2 m-select2--square m-select2--air">
                        @CustomHtmlHelper.DropDownUf("sEstado", "form-control m-select2", Model == null ? "ES" : Model.Uf)
                        <span class="m-form__help">Estado ao qual a localidade pertence</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="m-portlet__foot m-portlet__foot--fit">
            <div class="m-form__actions m-form__actions--solid m-form__actions--right">
                <button type="button" class="btn btn-sm m-btn--square btn-secondary m-btn--icon btn-fechar">
                    <span>
                        <i class="la la-close"></i>
                        <span>Cancelar</span>
                    </span>
                </button>
                <button type="submit" class="btn btn-sm m-btn--square m-btn--icon btn-info">
                    <span>
                        <i class="la la-check"></i>
                        <span>Salvar</span>
                    </span>
                </button>
            </div>
        </div>
    </form>
</div>
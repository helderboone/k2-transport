@using K2.Web.Helpers
@model K2.Web.Models.MotoristaRegistro

<div class="m-portlet m-portlet--brand m-portlet--head-solid-bg m-portlet-lg" style="margin:0 auto;">
    <div class="m-portlet__head">
        <div class="m-portlet__head-caption">
            <div class="m-portlet__head-title">
                <h3 class="m-portlet__head-text">
                    @(Model == null ? "Cadastrar" : "Alterar") motorista
                </h3>
            </div>
        </div>
    </div>
    <form id="frmManterMotorista" class="m-form m-form--fit m-form--state" novalidate="novalidate">
        <input type="hidden" id="iIdMotorista" name="iIdMotorista" value="@(Model != null ? Model.Id.ToString() : string.Empty)">
        <div class="m-portlet__body">
            <div class="form-group m-form__group m-form__group--md row">
                <div class="col-lg-8 m-form__group-sub">
                    <label>Nome <span class="m-badge m-badge--danger m-badge--dot"></span></label>
                    <input type="text" class="form-control m-input m-input--square m-input--air" id="iNome" name="iNome" maxlength="500" style="text-transform:uppercase;" value="@Model?.Nome">
                </div>
                <div class="col-lg-4 m-form__group-sub">
                    <label>Telefone celular <span class="m-badge m-badge--danger m-badge--dot"></span></label>
                    <div class="input-group m-input-group m-input-group--square m-input-group--air">
                        <div class="input-group-prepend"><span class="input-group-text"><i class="fa fa-phone"></i></span></div>
                        <input type="text" class="form-control m-input" id="iCelular" name="iCelular" value="@Model?.Celular">
                    </div>
                    <span class="m-form__help">DDD + Número</span>
                </div>
            </div>
            <div class="form-group m-form__group m-form__group--md row">
                <div class="col-lg-4 m-form__group-sub">
                    <label>Número da CNH <span class="m-badge m-badge--danger m-badge--dot"></span></label>
                    <input type="text" class="form-control m-input m-input--square m-input--air" id="iCnh" name="iCnh" value="@Model?.Cnh" maxlength="20">
                    <span class="m-form__help"></span>
                </div>
                <div class="col-lg-4 m-form__group-sub">
                    <label>Data de expedição da CNH <span class="m-badge m-badge--danger m-badge--dot"></span></label>
                    <div class="input-group m-input-group--square m-input-group--air date">
                        <input type="text" class="form-control m-input" id="iDataExpedicaoCnh" name="iDataExpedicaoCnh" value="@(Model == null ? string.Empty : Model.DataExpedicaoCnh.ToString("dd/MM/yyyy"))">
                        <div class="input-group-append">
                            <span class="input-group-text">
                                <i class="la la-calendar glyphicon-th"></i>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 m-form__group-sub">
                    <label>Data de validade da CNH <span class="m-badge m-badge--danger m-badge--dot"></span></label>
                    <div class="input-group m-input-group--square m-input-group--air date">
                        <input type="text" class="form-control m-input" id="iDataValidadeCnh" name="iDataValidadeCnh" value="@(Model == null ? string.Empty : Model.DataValidadeCnh.ToString("dd/MM/yyyy"))">
                        <div class="input-group-append">
                            <span class="input-group-text">
                                <i class="la la-calendar glyphicon-th"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group m-form__group m-form__group--md row">
                <div class="col-lg-4 m-form__group-sub">
                    <label>CPF</label>
                    <input type="text" class="form-control m-input m-input--square m-input--air" id="iCpf" name="iCpf" value="@Model?.Cpf">
                </div>
                <div class="col-lg-4 m-form__group-sub">
                    <label>RG</label>
                    <input type="text" class="form-control m-input m-input--square m-input--air" id="iRg" name="iRg" maxlength="20" style="text-transform:uppercase;" value="@Model?.Rg">
                </div>
                <div class="col-lg-4 m-form__group-sub">
                    <label>Email</label>
                    <div class="input-group m-input-group m-input-group--square m-input-group--air">
                        <div class="input-group-prepend"><span class="input-group-text"><i class="fa fa-envelope"></i></span></div>
                        <input type="text" class="form-control m-input" id="iEmail" name="iEmail" maxlength="500" style="text-transform:lowercase;" value="@Model?.Email">
                    </div>
                </div>
            </div>
            <div class="form-group m-form__group m-form__group--md row">
                <div class="col-lg-8 m-form__group-sub">
                    <label for="iEndereco">Endereço</label>
                    <input type="text" class="form-control m-input m-input--square m-input--air" id="iEndereco" name="iEndereco" maxlength="1000" style="text-transform:uppercase;" value="@Model?.Endereco">
                    <span class="m-form__help">Endereço completo (logradouro, número e complemento)</span>
                </div>
                <div class="col-lg-4 m-form__group-sub">
                    <label>CEP</label>
                    <input type="text" class="form-control m-input m-input--square m-input--air" id="iCep" name="iCep" value="@Model?.Cep">
                    <span class="m-form__help"></span>
                </div>
            </div>
            <div class="form-group m-form__group m-form__group--md row">
                <div class="col-lg-4 m-form__group-sub">
                    <label>Município</label>
                    <input type="text" class="form-control m-input m-input--square m-input--air" id="iMunicipio" name="iMunicipio" style="text-transform:uppercase;" value="@Model?.Municipio">
                    <span class="m-form__help"></span>
                </div>
                <div class="col-lg-4 m-form__group-sub">
                    <label>Estado</label>
                    <div class="m-select2 m-select2--square m-select2--air">
                        @CustomHtmlHelper.DropDownUf("sEstado", "form-control m-select2", Model == null ? "ES" : Model.Uf)
                        <span class="m-form__help"></span>
                    </div>
                </div>
                <div class="col-lg-4 m-form__group-sub">
                    <label class="form-control-label">Ativo</label>
                    <div class="m-checkbox-list">
                        <span class="m-switch m-switch--outline m-switch--info">
                            <label>
                                <input type="checkbox" @(Model == null ? "checked disabled" : (Model.Ativo ? "checked" : string.Empty)) name="cAtivo" id="cAtivo">
                                <span></span>
                            </label>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="m-portlet__foot m-portlet__foot--fit">
            <div class="m-form__actions m-form__actions--solid m-form__actions--right">
                <button type="button" class="btn btn-sm m-btn--square btn-secondary m-btn--icon btn-fechar">
                    <span>
                        <i class="la la-close"></i>
                        <span>Cancelar</span>
                    </span>
                </button>
                <button type="submit" class="btn btn-sm m-btn--square m-btn--icon btn-info">
                    <span>
                        <i class="la la-check"></i>
                        <span>Salvar</span>
                    </span>
                </button>
            </div>
        </div>
    </form>
</div>
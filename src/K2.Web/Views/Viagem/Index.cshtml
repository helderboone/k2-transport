<div class="modal fade" id="modal_Procurar" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="m-portlet m-portlet--brand m-portlet--head-solid-bg" style="margin:0 auto; width:100%;">
                <div class="m-portlet__head m-portlet__head--k2">
                    <div class="m-portlet__head-caption">
                        <div class="m-portlet__head-title">
                            <h3 class="m-portlet__head-text">
                                Procurar
                            </h3>
                        </div>
                    </div>
                </div>
                <form id="frmProcurarViagem" class="m-form m-form--state m-form--label-align-right">
                    <div class="m-portlet__body">
                        <div class="form-group m-form__group m-form__group--md row">
                            <div class="col-lg-12 m-form__group-sub">
                                <label>Nome</label>
                                <input type="text" class="form-control m-input m-input--square m-input--air" id="iProcurarNome" name="iProcurarNome" maxlength="500" style="text-transform:uppercase;">
                                <span class="m-form__help">Procura por palavra</span>
                            </div>
                        </div>
                        <div class="form-group m-form__group m-form__group--md row">
                            <div class="col-lg-12 m-form__group-sub">
                                <label>Estado</label>
                                <div class="m-select2 m-select2--square m-select2--air">
                                    @CustomHtmlHelper.DropDownUf("sProcurarEstado", "form-control m-select2", string.Empty)
                                    <span class="m-form__help"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="m-portlet__foot m-portlet__foot--fit">
                        <div class="m-form__actions m-form__actions--solid m-form__actions--right">
                            <button type="button" class="btn btn-secondary btn-fechar" data-dismiss="modal">Fechar</button>
                            <button type="submit" class="btn btn-info" id="bProcurar">Procurar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section VendorsJs
    {
    <script src="~/assets/vendors/custom/datatables/datatables.bundle.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        $.extend($.fn.dataTable.defaults, {
            autoWidth: true,
            lengthMenu: [[10, 25, 50], [10, 25, 50]],
            pagingType: "full_numbers",
            language: {
                infoEmpty: "Nenhum registro encontrado.",
                info: "Exibindo _START_ até _END_ de _TOTAL_ registros",
                paginate: {
                    first: "<<",
                    next: ">",
                    previous: "<",
                    last: ">>",
                    zeroRecords: "Nenhum registro encontrado."
                },
                emptyTable: "Nenhum registro encontrado.",
                zeroRecords: "Nenhum registro encontrado."
            }
        });
    </script>
}


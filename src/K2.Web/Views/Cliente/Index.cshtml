
@{
    ViewData["Title"] = "Clientes";
    Layout = "Template";
}

@section VendorsCss
{
    <link href="~/assets/vendors/custom/datatables/datatables.bundle.min.css" rel="stylesheet" type="text/css" />
}

<div class="m-portlet m-portlet--primary m-portlet--k2">
    <div class="m-portlet__head m-portlet__head--k2">
        <div class="m-portlet__head-caption">
            <div class="m-portlet__head-title">
                <button type="button" class="btn btn-sm m-btn--square m-btn--icon btn-info mr-2" id="bCadastrar">
                    <span>
                        <i class="la la-plus"></i>
                        <span>Novo cliente</span>
                    </span>
                </button>
                <button type="button" class="btn btn-sm m-btn--square m-btn--icon btn-secondary" data-toggle="modal" data-target="#modal_Procurar" data-backdrop="static">
                    <span>
                        <i class="la la-search"></i>
                        <span>Procurar</span>
                    </span>
                </button>
            </div>
        </div>
    </div>
    <div class="m-portlet__body">
        <table class="table table-bordered m-table m-table--head-bg-metal table-hover table-striped nowrap" id="tblCliente">
            <thead>
                <tr>
                    <th data-priority="1">Nome</th>
                    <th>Celular</th>
                    <th>Email</th>
                    <th>CPF</th>
                    <th>RG</th>
                    <th>Ativo</th>
                    <th data-priority="2">Ações</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<div class="modal fade" id="modal_Procurar" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="m-portlet m-portlet--brand m-portlet--head-solid-bg" style="margin:0 auto; width:100%;">
                <div class="m-portlet__head m-portlet__head--k2">
                    <div class="m-portlet__head-caption">
                        <div class="m-portlet__head-title">
                            <span class="m-portlet__head-icon">
                                <i class="la la-search"></i>
                            </span>
                            <h3 class="m-portlet__head-text">
                                Procurar
                            </h3>
                        </div>
                    </div>
                </div>
                <form id="frmProcurarCliente" class="m-form m-form--state m-form--label-align-right">
                    <div class="m-portlet__body">
                        <div class="form-group m-form__group m-form__group--md row">
                            <div class="col-lg-12 m-form__group-sub">
                                <label>Nome</label>
                                <input type="text" class="form-control m-input m-input--square m-input--air" id="iProcurarNome" name="iProcurarNome" maxlength="500" style="text-transform:uppercase;">
                                <span class="m-form__help">Procura por palavra-chave</span>
                            </div>
                        </div>
                        <div class="form-group m-form__group m-form__group--md row">
                            <div class="col-lg-12 m-form__group-sub">
                                <label>Email</label>
                                <div class="input-group m-input-group m-input-group--square m-input-group--air">
                                    <div class="input-group-prepend"><span class="input-group-text"><i class="fa fa-envelope"></i></span></div>
                                    <input type="text" class="form-control m-input" id="iProcurarEmail" name="iProcurarEmail" maxlength="500" style="text-transform:lowercase;">
                                </div>
                                <span class="m-form__help">Procura por palavra-chave</span>
                            </div>
                        </div>
                        <div class="form-group m-form__group m-form__group--md row">
                            <div class="col-lg-6 m-form__group-sub">
                                <label>CPF</label>
                                <input type="text" class="form-control m-input m-input--square m-input--air" id="iProcurarCpf" name="iCpf">
                            </div>
                            <div class="col-lg-6 m-form__group-sub">
                                <label>RG</label>
                                <input type="text" class="form-control m-input m-input--square m-input--air" id="iProcurarRg" name="iRg" maxlength="20" style="text-transform:uppercase;">
                                <span class="m-form__help">Procura por palavra-chave</span>
                            </div>
                        </div>
                    </div>
                    <div class="m-portlet__foot m-portlet__foot--fit">
                        <div class="m-form__actions m-form__actions--solid m-form__actions--right">
                            <button type="button" class="btn btn-sm m-btn--square btn-secondary m-btn--icon" data-dismiss="modal">
                                <span>
                                    <i class="la la-close"></i>
                                    <span>Cancelar</span>
                                </span>
                            </button>
                            <button type="submit" class="btn btn-sm m-btn--square m-btn--icon btn-info" id="bProcurar">
                                <span>
                                    <i class="la la-search"></i>
                                    <span>Procurar</span>
                                </span>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>		        

@section VendorsJs
    {
    <script src="~/assets/vendors/custom/datatables/datatables.bundle.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        $.extend($.fn.dataTable.defaults, {
            //processing: false,
            //responsive: false,
            autoWidth: true,
            lengthMenu: [[10, 25, 50], [10, 25, 50]],
            pagingType: "full_numbers",
            language: {
                //sLengthMenu: '_MENU_ registros por p&aacute;gina',
                //sProcessing: '<i class="fa fa-spinner fa-pulse"></i> Carregando',
                infoEmpty: "Nenhum registro encontrado.",
                info: "Exibindo _START_ até _END_ de _TOTAL_ registros",
                paginate: {
                    first: "<<",
                    next: ">",
                    previous: "<",
                    last: ">>",
                    zeroRecords: "Nenhum registro encontrado."
                },
                //infoFiltered: "(filtrado a partir do total de _MAX_ registros)",
                emptyTable: "Nenhum registro encontrado.",
                zeroRecords: "Nenhum registro encontrado."
            }
        });
    </script>
}

@section PaginaJS
    {
    <environment include="Development">
        <script src="~/assets/js/views/cliente.js" type="text/javascript"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/assets/js/views/cliente.min.js" type="text/javascript"></script>
    </environment>
}
@using K2.Web.Helpers

@inject CustomHtmlHelper customHtmlHelper
@model K2.Web.Models.ReservaRegistro

<div class="m-portlet m-portlet--brand m-portlet--head-solid-bg m-portlet-md" style="margin:0 auto;">
    <div class="m-portlet__head">
        <div class="m-portlet__head-caption">
            <div class="m-portlet__head-title">
                <h3 class="m-portlet__head-text">
                    @(Model == null ? "Cadastrar" : "Alterar") reserva
                </h3>
            </div>
        </div>
    </div>
    <form id="frmManterReserva" class="m-form m-form--fit m-form--state" novalidate="novalidate">
        <input type="hidden" id="iIdViagem" name="iIdViagem" value="@(Model != null ? string.Empty : ViewData["IdViagem"])">
        <input type="hidden" id="iIdReserva" name="iIdReserva" value="@(Model != null ? Model.Id.ToString() : string.Empty)">
        <div class="m-portlet__body">
            <div class="form-group m-form__group m-form__group--md row">
                <div class="col-lg-12 m-form__group-sub">
                    <label>Cliente <span class="m-badge m-badge--danger m-badge--dot"></span></label>
                    <div class="m-select2 m-select2--square m-select2--air">
                        @customHtmlHelper.DropDownClientes("sCliente", "form-control m-select2", Model == null ? string.Empty : Model.IdCliente.ToString())
                        <span class="m-form__help">Selecione o cliente</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="m-portlet__foot m-portlet__foot--fit">
            <div class="m-form__actions m-form__actions--solid m-form__actions--right">
                <button type="button" class="btn m-btn--square btn-secondary btn-fechar">Cancelar</button>
                <button type="submit" class="btn m-btn--square btn-info">Salvar</button>
            </div>
        </div>
    </form>
</div>
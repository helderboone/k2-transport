@using K2.Web.Helpers

@model K2.Web.Models.ReservaDependenteRegistro

<div class="m-portlet m-portlet--brand m-portlet--head-solid-bg m-portlet-md" style="margin:0 auto;">
    <div class="m-portlet__head">
        <div class="m-portlet__head-caption">
            <div class="m-portlet__head-title">
                <h3 class="m-portlet__head-text">
                    @(Model == null ? "Cadastrar" : "Alterar") dependente
                </h3>
            </div>
        </div>
    </div>
    <form id="frmManterReservaDependente" class="m-form m-form--fit m-form--state" novalidate="novalidate">
        <input type="hidden" id="iIdReserva" name="iIdReserva" value="@(Model != null ? Model.IdReserva.ToString() : ViewData["IdReserva"])">
        <div class="m-portlet__body">
            <div class="form-group m-form__group m-form__group--md row">
                <div class="col-lg-12 m-form__group-sub">
                    <label>Cliente</label>
                    <p class="form-control-static m--font-boldest">@ViewData["NomeCliente"]</p>
                </div>
            </div>
            <div class="form-group m-form__group m-form__group--md row">
                <div class="col-lg-12 m-form__group-sub">
                    <label>Nome <span class="m-badge m-badge--danger m-badge--dot"></span></label>
                    <input type="text" class="form-control m-input m-input--square m-input--air" id="iNomeDependente" name="iNomeDependente" style="text-transform:uppercase;" maxlength="500" value="@Model?.Nome">
                </div>
            </div>
            <div class="form-group m-form__group m-form__group--md row">
                <div class="col-lg-6 m-form__group-sub">
                    <label>Data de nascimento <span class="m-badge m-badge--danger m-badge--dot"></span></label>
                    <input type="text" class="form-control m-input m-input--square m-input--air" id="iDataNascimentoDependente" name="iDataNascimentoDependente" value="@Model?.DataNascimento.ToString("dd/MM/yyyy")">
                </div>
            </div>
            <div class="form-group m-form__group m-form__group--md row">
                <div class="col-lg-6 m-form__group-sub">
                    <label>CPF</label>
                    <input type="text" class="form-control m-input m-input--square m-input--air" id="iCpfDependente" name="iCpfDependente" value="@Model?.Cpf">
                </div>
                <div class="col-lg-6 m-form__group-sub">
                    <label>RG</label>
                    <input type="text" class="form-control m-input m-input--square m-input--air" id="iRgDependente" name="iRgDependente" maxlength="20" style="text-transform:uppercase;" value="@Model?.Rg">
                </div>
            </div>
        </div>
        <div class="m-portlet__foot m-portlet__foot--fit">
            <div class="m-form__actions m-form__actions--solid m-form__actions--right">
                <button type="button" class="btn btn-sm m-btn--square btn-secondary m-btn--icon btn-fechar">
                    <span>
                        <i class="la la-close"></i>
                        <span>Cancelar</span>
                    </span>
                </button>
                <button type="submit" class="btn btn-sm m-btn--square m-btn--icon btn-info">
                    <span>
                        <i class="la la-check"></i>
                        <span>Salvar</span>
                    </span>
                </button>
            </div>
        </div>
    </form>
</div>